                                input(type="text" class="form-control" id="newimg" name="newimg" placeholder="请输入图片路径")
                            div(class="form-group")
                                label(for="newcontent")
                                    新闻
                                input(type="text" class="form-control" id="newcontent" name="newcontent")
                            div(class="form-group")
                                label(for="newtime")
                                    新闻时间
                                input(type="date" class="form-control" id="newtime" name="newtime")
                            button(type="submit" class="btn btn-primary" id="confirmupdate")
                                确认
